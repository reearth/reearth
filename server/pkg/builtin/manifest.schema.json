{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "system": {
      "type": "boolean"
    },
    "author": {
      "type": "string"
    },
    "main": {
      "type": "string"
    },
    "repository": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "schema": {
      "$ref": "#/definitions/propertySchemaGroup"
    },
    "extensions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "icon": {
            "type": "string"
          },
          "visualizer": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "visualizer",
              "infobox",
              "primitive",
              "block",
              "widget",
              "cluster",
              "story",
              "storyPage",
              "storyBlock"
            ]
          },
          "singleOnly": {
            "type": "boolean"
          },
          "widgetLayout": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "floating": {
                "type": "boolean"
              },
              "extended": {
                "type": "boolean"
              },
              "defaultLocation": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "area": {
                    "type": "string",
                    "enum": [
                      "top",
                      "middle",
                      "bottom"
                    ]
                  },
                  "section": {
                    "type": "string",
                    "enum": [
                      "left",
                      "center",
                      "right"
                    ]
                  },
                  "zone": {
                    "type": "string",
                    "enum": [
                      "inner",
                      "outer"
                    ]
                  }
                },
                "required": [
                  "area",
                  "section",
                  "zone"
                ]
              },
              "extendable": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "horizontally": {
                    "type": "boolean"
                  },
                  "vertically": {
                    "type": "boolean"
                  }
                }
              }
            }
          },
          "schema": {
            "$ref": "#/definitions/propertySchemaGroup"
          },
          "required": [
            "id",
            "name",
            "type"
          ]
        }
      }
    },
    "required": [
      "id",
      "name",
      "system",
      "extensions"
    ]
  },
  "definitions": {
    "propertySchemaGroup": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "groups": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "representativeField": {
                "type": "string"
              },
              "list": {
                "type": "boolean"
              },
              "availableIf": {
                "$ref": "#/definitions/propertyCondition"
              },
              "fields": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "enum": [
                        "string",
                        "number",
                        "bool",
                        "url",
                        "latlng",
                        "coordinates",
                        "polygon",
                        "rect",
                        "ref",
                        "spacing",
                        "typography",
                        "camera"
                      ]
                    },
                    "ui": {
                      "type": "string",
                      "enum": [
                        "color",
                        "image",
                        "slider",
                        "datetime",
                        "multiline",
                        "file",
                        "video",
                        "camera_pose",
                        "layer",
                        "padding"
                      ]
                    },
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "defaultValue": {
                      "type": null
                    },
                    "choices": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "icon": {
                            "type": "string"
                          },
                          "key": {
                            "type": "string"
                          },
                          "label": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "key",
                          "label"
                        ]
                      }
                    },
                    "min": {
                      "type": "number"
                    },
                    "max": {
                      "type": "number"
                    },
                    "suffix": {
                      "type": "string"
                    },
                    "prefix": {
                      "type": "string"
                    },
                    "availableIf": {
                      "$ref": "#/definitions/propertyCondition"
                    }
                  },
                  "required": [
                    "id",
                    "type",
                    "title"
                  ]
                }
              }
            },
            "required": [
              "id",
              "title",
              "fields"
            ]
          }
        },
        "linkable": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "url": {
              "$ref": "#/definitions/propertyPointer"
            },
            "latlng": {
              "$ref": "#/definitions/propertyPointer"
            },
            "required": [
            ]
          },
          "version": {
            "type": "number"
          }
        },
        "required": [
          "groups"
        ]
      }
    },
    "propertyCondition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "field": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "string",
            "number",
            "bool"
          ]
        },
        "value": {
          "type": null
        }
      },
      "required": [
        "field",
        "type",
        "value"
      ]
    },
    "propertyPointer": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "schemaGroupId": {
          "type": "string"
        },
        "fieldId": {
          "type": "string"
        }
      },
      "required": [
        "schemaGroupId",
        "fieldId"
      ]
    }
  }
}